<UserControl x:Class="SyslabControlAlgorithmFrameworkWpfGui.View.NetworkDiscoveryUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ViewModel="clr-namespace:SyslabControlAlgorithmFrameworkWpfGui.ViewModel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SyslabControlAlgorithmFrameworkWpfGui.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <ViewModel:NetworkDiscoveryViewModel />
    </UserControl.DataContext>
    <UniformGrid>
        <GroupBox Header="Current Addresses 1">
            <ListView ItemsSource="{Binding CurrentAddresses1}"/>
        </GroupBox>
        <GroupBox Header="Current Addresses 2">
            <ListView ItemsSource="{Binding CurrentAddresses2}"/>
        </GroupBox>
        <GroupBox Header="Current Addresses 3">
            <ListView ItemsSource="{Binding CurrentAddresses3}"/>
        </GroupBox>
        <GroupBox Header="Current Addresses 4">
            <ListView ItemsSource="{Binding CurrentAddresses4}"/>
        </GroupBox>
    </UniformGrid>
</UserControl>
