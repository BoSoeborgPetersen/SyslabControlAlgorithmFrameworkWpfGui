<UserControl x:Class="SyslabControlAlgorithmFrameworkWpfGui.View.AlgorithmsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ViewModel="clr-namespace:SyslabControlAlgorithmFrameworkWpfGui.ViewModel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <ViewModel:AlgorithmsViewModel />
    </UserControl.DataContext>
    <DockPanel>
        <UniformGrid DockPanel.Dock="Top" Rows="1">
            <GroupBox Header="Client Names">
                <ListView ItemsSource="{Binding Clients}" SelectedItem="{Binding SelectedClient, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </GroupBox>
            <GroupBox Header="Algorithm Names">
                <ListView ItemsSource="{Binding AlgorithmNames}" SelectedItem="{Binding SelectedAlgorithmName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </GroupBox>
            <GroupBox Header="Algorithm State">
                <TextBlock Text="{Binding AlgorithmState}"/>
            </GroupBox>
            <GroupBox Header="Is Isolated">
                <UniformGrid Columns="1">
                    <TextBlock Text="{Binding IsIsolated}"/>
                    <Button Command="{Binding SwitchIsIsolatedCommand}" Content="Switch IsIsolated"/>
                </UniformGrid>
            </GroupBox>
        </UniformGrid>
        <UniformGrid DockPanel.Dock="Top" Rows="1">
            <Button Content="Start Algorithm" Command="{Binding StartAlgorithmCommand}"/>
            <Button Content="Stop Algorithm" Command="{Binding StopAlgorithmCommand}"/>
            <Button Content="Restart Algorithm" Command="{Binding RestartAlgorithmCommand}"/>
            <Button Content="Pause Algorithm" Command="{Binding PauseAlgorithmCommand}"/>
            <Button Content="Resume Algorithm" Command="{Binding ResumeAlgorithmCommand}"/>
        </UniformGrid>
        <UniformGrid>
            <GroupBox Header="Control Parameter Names">
                <ListView ItemsSource="{Binding ControlParameterNames}" SelectedItem="{Binding SelectedControlParameterName, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"/>
            </GroupBox>
            <GroupBox Header="Control Parameter">
                <ContentControl Content="{Binding ControlParameter}">
                    <ContentControl.Resources>
                        <DataTemplate DataType="{x:Type sys:Boolean}" >
                            <Controls:ToggleSwitchButton IsChecked="{Binding DataContext.ControlParameter, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" HorizontalAlignment="Center" Margin="5" Padding="5" Width="80"/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type sys:Double}" >
                            <TextBox Text="{Binding DataContext.ControlParameter, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"/>
                        </DataTemplate>
                    </ContentControl.Resources>
                </ContentControl>
                <!--<TextBox Text="{Binding ControlParameter}"/>-->
            </GroupBox>
            <GroupBox Header="Control Output Names">
                <ListView ItemsSource="{Binding ControlOutputNames}" SelectedItem="{Binding SelectedControlOutputName, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"/>
            </GroupBox>
            <GroupBox Header="Control Output">
                <ContentControl Content="{Binding ControlOutput}">
                    <ContentControl.Resources>
                        <DataTemplate DataType="{x:Type sys:Boolean}" >
                            <Controls:ToggleSwitch IsChecked="{Binding .}" HorizontalAlignment="Center" Margin="5" Padding="5" Width="80"/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type sys:Nullable}" >
                            <ScrollViewer>
                                <TextBlock Text="{Binding .}"/>
                            </ScrollViewer>
                        </DataTemplate>
                    </ContentControl.Resources>
                </ContentControl>
            </GroupBox>
        </UniformGrid>
    </DockPanel>
</UserControl>
