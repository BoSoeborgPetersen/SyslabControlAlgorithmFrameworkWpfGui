<UserControl x:Class="SyslabControlAlgorithmFrameworkWpfGui.View.MessageExchangeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ViewModel="clr-namespace:SyslabControlAlgorithmFrameworkWpfGui.ViewModel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SyslabControlAlgorithmFrameworkWpfGui.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <ViewModel:MessageExchangeViewModel />
    </UserControl.DataContext>
    <UniformGrid>
        <GroupBox Header="{Binding Name1}">
            <ListView ItemsSource="{Binding PreviousMessages1}"/>
        </GroupBox>
        <GroupBox Header="{Binding Name2}">
            <ListView ItemsSource="{Binding PreviousMessages2}"/>
        </GroupBox>
        <GroupBox Header="{Binding Name3}">
            <ListView ItemsSource="{Binding PreviousMessages3}"/>
        </GroupBox>
        <GroupBox Header="{Binding Name4}">
            <ListView ItemsSource="{Binding PreviousMessages4}"/>
        </GroupBox>
    </UniformGrid>
</UserControl>
